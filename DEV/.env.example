APP_NAME="UBP Orchestrator"

# Server Settings
HOST=0.0.0.0
PORT=8000

# App Configuration
# --- 0. CORE & SECURITY ---
UBP_ENV=development
UBP_SECURITY_KEY=change_this_to_a_secure_random_string

# Logging
LOG_LEVEL=INFO

# Timezone
TIMEZONE=Europe/Copenhagen

# Security (CHANGE THESE IN PRODUCTION!)
UBP_SECRET_KEY=change_this_secret_key_in_prod_12345
UBP_API_KEY=test-key-123


# --- 0. DATABASES ---

# Postgres Database (CHANGE THESE IN PRODUCTION!)
DB_PG_HOST=127.0.0.1
DB_PG_PORT=5432
DB_PG_USER=postgres
DB_PG_PASSWORD=postgres
DB_PG_NAME=ubp

# MySQL Database (CHANGE THESE IN PRODUCTION!)
DB_MYSQL_HOST=127.0.0.1
DB_MYSQL_PORT=3306
DB_MYSQL_USER=root
DB_MYSQL_PASSWORD=root
DB_MYSQL_NAME=ubp

# MongoDB (CHANGE THESE IN PRODUCTION!)
DB_MONGO_HOST=127.0.0.1
DB_MONGO_PORT=27017

# SQL Server (CHANGE THESE IN PRODUCTION!)
DB_MSSQL_HOST=127.0.0.1
DB_MSSQL_PORT=1433

# MariaDB (CHANGE THESE IN PRODUCTION!)
DB_MARIADB_HOST=127.0.0.1
DB_MARIADB_PORT=3306

# Cassandra (CHANGE THESE IN PRODUCTION!)
DB_CASSANDRA_HOST=127.0.0.1
DB_CASSANDRA_PORT=9042

# Neo4j (CHANGE THESE IN PRODUCTION!)
DB_NEO4J_HOST=127.0.0.1
DB_NEO4J_PORT=7687

# Elasticsearch (CHANGE THESE IN PRODUCTION!)
DB_ES_HOST=127.0.0.1
DB_ES_PORT=9200


# --- 2. CACHES ---

# Redis (CHANGE THESE IN PRODUCTION!)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Redis Sentinel (CHANGE THESE IN PRODUCTION!)
REDIS_SENTINEL_HOST=127.0.0.1
