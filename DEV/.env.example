# --- 3. LLM PROVIDERS (Runtime) ---

# OpenAI
OPENAI_API_KEY=sk-your-openai-noegle-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-claude-noegle-here

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-noegle-here


# --- 4. PLATFORM ADAPTERS ---

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_SECRET=a-random-secret-string

# Slack
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_APP_TOKEN=your-slack-app-token

# WhatsApp (Meta)
WHATSAPP_ACCESS_TOKEN=your-meta-access-token
WHATSAPP_PHONE_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=ubp_verification_token
WHATSAPP_APP_SECRET=your-app-secret

# Facebook Messenger
MESSENGER_PAGE_ACCESS_TOKEN=your-page-access-token
MESSENGER_APP_SECRET=your-app-secret
